{
  "background": {
    "scripts": [
      "./js/__MSG_platform__-background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2,
  "minimum_chrome_version": "54",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "notifications",
    "*://*/*",
    "contextMenus",
    "tabs",
    "activeTab"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "browser_action": {
    "default_icon": "./images/icon-__MSG_platform__-128px.png"
  },
  "icons": {
    "16": "./images/icon-__MSG_platform__-16px.png",
    "48": "./images/icon-__MSG_platform__-48px.png",
    "128": "./images/icon-__MSG_platform__-128px.png"
  }
}
