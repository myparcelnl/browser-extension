{
  "name": "@myparcel/chrome-extension",
  "version": "2.7.2",
  "description": "MyParcel Chrome Extension",
  "repository": {
    "url": "git+ssh://git@github.com/myparcelnl/browser-extension.git"
  },
  "type": "module",
  "license": "MIT",
  "author": "Edie Lemoine <edie@myparcel.nl>",
  "scripts": {
    "build": "run prebuild && node private/build.js",
    "build:all": "run build:dev && run build:staging && run build:prod",
    "build:dev": "run build --environment development",
    "build:prod": "run build --environment production",
    "build:staging": "run build --environment staging",
    "prebuild": "tsc --project tsconfig.build.json",
    "prepare": "is-ci || husky install",
    "publish": "node private/process.mjs --publish",
    "release": "npm --no-git-tag-version version minor && run prod:build && node private/process.mjs --build prod --upload --publish",
    "serve": "vite",
    "stage": "run stage:build && node private/process.mjs --build stage --upload --publish",
    "test": "jest",
    "upload": "node private/process.mjs --upload"
  },
  "dependencies": {
    "unique-selector": "^0.5.0"
  },
  "prettier": "@myparcel/prettier-config",
  "lint-staged": {
    "*.{js,cjs,mjs}": "eslint --fix",
    "*.{json,md,yml,html,css,scss}": "prettier --write"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@myparcel-eslint/eslint-config-esnext": "^1.3.1",
    "@myparcel-eslint/eslint-config-import": "^1.2.1",
    "@myparcel-eslint/eslint-config-node": "^1.3.1",
    "@myparcel-eslint/eslint-config-prettier": "^1.3.1",
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.3.1",
    "@myparcel/ts-utils": "^1.14.0",
    "@types/chrome": "^0.0.267",
    "@types/jest": "^25.2.3",
    "@types/node": "^20.12.11",
    "chrome-webstore-upload": "^1.0.0",
    "commander": "^12.0.0",
    "eslint": "^8.0.0",
    "fast-glob": "^3.3.2",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "jest": "^26.0.1",
    "jest-puppeteer": "^6.1.0",
    "jest-webextension-mock": "^3.6.0",
    "lint-staged": "^15.2.2",
    "prettier": "^2.0.0",
    "puppeteer": "^14.1.0",
    "sass": "^1.76.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "yargs": "^15.3.1"
  },
  "packageManager": "yarn@4.1.1",
  "volta": {
    "node": "20.12.2"
  }
}
